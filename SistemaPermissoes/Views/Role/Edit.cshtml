@model RoleCreateViewModel

<link rel="stylesheet" href="~/css/styles.css" />

<div class="form-container">
    <h2>Editar Papel</h2>

    <form asp-action="Edit" method="post">
        <div class="form-group">
            <label asp-for="Nome">Nome</label>
            <input type="text" name="Nome" value="@Model.Nome" required />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="form-group">
            <h4>Tarefas disponíveis:</h4>
            @for (int i = 0; i < Model.Tarefas.Count; i++)
            {
                <div>
                    <input type="checkbox"
                           asp-for="Tarefas[i].IsAssigned"
                           value="true"
                           name="Tarefas[@i].IsAssigned"
                    @(Model.Tarefas[i].IsAssigned ? "checked" : "") />
                    <input type="hidden" asp-for="Tarefas[i].TarefaId" name="Tarefas[@i].TarefaId" value="@Model.Tarefas[i].TarefaId" />
                    <input type="hidden" asp-for="Tarefas[i].TarefaNome" name="Tarefas[@i].TarefaNome" value="@Model.Tarefas[i].TarefaNome" />
                    <label>@Model.Tarefas[i].TarefaNome</label>
                </div>
            }
        </div>

        <button type="submit" class="btn-submit">Salvar</button>
        <a href="/Role" class="btn-danger">Cancelar</a>
    </form>

    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.6.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation/1.19.3/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
</div>
