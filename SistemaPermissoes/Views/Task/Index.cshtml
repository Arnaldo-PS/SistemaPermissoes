@model IEnumerable<Tarefa>

@{
    ViewData["Title"] = "Tarefas";
}

<link rel="stylesheet" href="~/css/style.css" />

<div class="user-management-wrapper">
    <h2>Tarefas</h2>
    <br />
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tarefa in Model)
            {
                <tr>
                    <td>@tarefa.Id</td>
                    <td>@tarefa.Nome</td>
                    <td>
                        <a href="/Task/Edit/@tarefa.Id" class="btn-danger">Editar</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
    <p></p>
   
    <div class="button-row">
        <button class="btn btn-success" onclick="location.href='@Url.Action("Create", "Task")'">Criar Nova Tarefa</button>
        <a href="/Home" class="btn btn-secondary">Voltar</a>
    </div>
</div>
